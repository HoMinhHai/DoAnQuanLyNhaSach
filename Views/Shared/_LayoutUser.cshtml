<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <title></title>
    <link rel="stylesheet" type="text/css" href="~/Content/templatemo_style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</head>
<body>

    
    <div id="templatemo_container">
    
        <div id="menu" >
            <ul>
                <li ><a style="line-height: 15px;position: relative" href="@Url.Action("Index","BookStore")">
                    <img class="icon_menu" src="~/images/icon_homepage.png" /><br />Trang chủ</a>
                
                </li>
                <li>@Html.ActionLink("Đăng nhập", "Dangnhap", "Nguoidung")</li>
                <li>@Html.Action("GiohangPartial", "Giohang")</li>
                <li>@Html.ActionLink("Đăng ký","Dangky","Nguoidung")</li>
                
            </ul>
        </div> <!-- end of menu -->

        

        <div id="templatemo_content">

            <div id="templatemo_content_left">
                <p>Chủ đề sách</p>
                 @Html.Action("Chude", "BookStore")
                 @Html.Action("Nhaxuatban", "BookStore")
            </div> <!-- end of content left -->

            <div id="templatemo_content_right">
                @RenderBody()
            </div>
               

                <div class="cleaner_with_height">&nbsp;</div>
            </div> <!-- end of content -->

        <div id="footer">

            <table style="margin:auto">
                
                <tr>
                    <th>DỊCH VỤ</th>
                    <th>HỖ TRỢ</th>
                    <th>TÀI KHOẢN CỦA TÔI</th>
                    

                </tr>
                <tr>
                    <td>Điều khoản sử dụng</td>
                    <td>Chính sách đổi trả, hoàn tiền</td>
                    <td>Đăng nhập/Tạo mới tài khoản</td>
                </tr>
                <tr>
                    <td>Chính sách bảo mật</td>
                    <td>Chính sách bảo hành</td>
                    <td>Lịch sử mua hàng</td>
                </tr>
            </table>
    </div> 
    </div>
</body>
</html>
